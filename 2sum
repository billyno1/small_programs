#include <iostream>

using namespace std;

bool hasPair(int * array, int sum, int num) {
    int head = 0;
    int tail = num - 1;
    while (head < tail) {
        int curSum = array[head] + array[tail];
        if (curSum == sum) {
            return true;
        } else if (curSum < sum){
            head++;
        } else {
            tail--;
        }
    }
    return false;
}

int main()
{
    int array [] = {1, 3, 5, 8, 11};
    int sum = 18;
    cout << hasPair(array, sum, 5) << endl;

    return 0;
}
